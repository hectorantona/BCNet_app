<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:id="@+id/parent_layout"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/image"
        android:src= "@mipmap/ic_launcher"
        />

    <TextView

        android:id="@+id/image_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="text"
        android:layout_toRightOf="@+id/image"
        android:textColor="#000"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/image_category"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/image"
        android:layout_below="@id/image_name"
        android:text="text"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/puntuacio_Global"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        android:layout_toRightOf="@+id/image_category"
        android:layout_below="@id/semafor"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:layout_marginLeft="32dp"
        android:textSize="17sp"
        />
    <ImageView
        android:id="@+id/semafor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/image_name"
        android:src= "@mipmap/ic_launcher"
        />

    <ImageView
        android:id="@+id/estrella"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/semafor"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/puntuacio_Global"
        android:layout_toRightOf="@+id/puntuacio_Global"
        app:srcCompat="@drawable/baseline_star_rate_black_24" />

    <TextView

        android:id="@+id/tancat"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/semafor"
        android:text="@string/tancat"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:background="@color/close"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/obert"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/semafor"
        android:text="@string/obert"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:background="@color/open"
        android:textSize="14sp"
         />

</RelativeLayout>